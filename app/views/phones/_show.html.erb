<div class="ui-grid-b">
  <div class="ui-block-a">
    <h3>Your Phone Number:</h3>
  </div>
  <div class="ui-block-b">
    <p><%= current_user.phone.number %></p>
  </div>
  <div class="ui-block-c">
    <%= button_to "Change", phone_path, :method => :delete, 'data-inline' => 'true' %>
  </div>
</div>
<% if ! current_user.phone.verified? %>
  <%= form_tag(verify_phone_path, :method => :get) do %>
    <%= label_tag(:code, "Verification Code:") %>
    <%= text_field_tag(:code) %>
    <%= submit_tag("Verify!",'data-inline' => 'true') %>
  <% end %>
  <%= button_to "Resend Code", resend_code_phone_path %></p>
<% end %>
